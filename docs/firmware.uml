#include "statediagrams.uml"

// States
#define S_INIT_GYR   "{ INIT_GYRO | Initialize\nGyroscope }"
#define S_INIT_ACC   "{ INIT_ACCEL | Initialize\nAccelerometer }"
#define S_INIT_MAG   "{ INIT_MAGN | Initialize\nMagnetometer }"
#define S_SLEEP      "{ SLEEP | }"
#define S_RD_GYR     "{ RD_GYRO | Read\nGyroscope }"
#define S_RD_ACC     "{ RD_ACCEL | Read\nAccelerometer }"
#define S_RD_MAG     "{ RD_MAGN | Read\nMagnetometer }"

digraph "IMUco Firmware State Diagram" {
	// States
	start();
	state(S_INIT_GYR);
	state(S_INIT_ACC);
	state(S_INIT_MAG);
	state(S_SLEEP);
	state(S_RD_GYR);
	state(S_RD_ACC);
	state(S_RD_MAG);

	// Initialize gyroscope
	transition(S_START, S_INIT_GYR, "POWER_ON");
	transition(S_INIT_GYR, S_INIT_GYR, "I2C_IRQ / gyro_i2c_irq()");

	// Initialize accelerometer
	transition(S_INIT_GYR, S_INIT_ACC, "GYR_INIT_CB");
	transition(S_INIT_ACC, S_INIT_ACC, "I2C_IRQ / accel_i2c_irq()");

	// Initialize magnetometer
	transition(S_INIT_ACC, S_INIT_MAG, "GYR_INIT_CB");
	transition(S_INIT_MAG, S_INIT_MAG, "I2C_IRQ / magn_i2c_irq()");

	// Sleep
	transition(S_INIT_MAG, S_SLEEP, "MAG_INIT_CB / sleep()");

	// Read gyroscope
	transition(S_SLEEP, S_RD_GYR, "GYRO_DATA_IRQ");
	transition(S_RD_GYR, S_SLEEP, "GYRO_DATA_CB / sleep()");
	transition(S_RD_GYR, S_RD_GYR, "I2C_IRQ / gyr_i2c_irq()");

	// Read accelerometer
	transition(S_SLEEP, S_RD_ACC, "ACCEL_DATA_IRQ");
	transition(S_RD_ACC, S_SLEEP, "ACCEL_DATA_CB / sleep()");
	transition(S_RD_ACC, S_RD_ACC, "I2C_IRQ / accel_i2c_irq()");

	// Read magnetometer
	transition(S_SLEEP, S_RD_MAG, "MAGN_DATA_IRQ");
	transition(S_RD_MAG, S_SLEEP, "MAGN_DATA_CB / sleep()");
	transition(S_RD_MAG, S_RD_MAG, "I2C_IRQ / magn_i2c_irq()");
}
